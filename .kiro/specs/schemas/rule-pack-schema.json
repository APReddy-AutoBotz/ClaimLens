{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClaimLens Rule Pack Schema",
  "description": "Schema for allergen and banned claims rule packs",
  "oneOf": [
    {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Simple list of strings (allergens or banned claims)"
    },
    {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "items": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          }
        }
      },
      "required": ["items"]
    }
  ]
}
