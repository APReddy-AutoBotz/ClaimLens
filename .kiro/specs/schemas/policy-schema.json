{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ClaimLens Policy Schema",
  "type": "object",
  "required": ["version", "profiles"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (MAJOR.MINOR.PATCH)"
    },
    "profiles": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[a-z_]+$": {
          "type": "object",
          "required": ["name", "routes"],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "routes": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["path", "transforms", "latency_budget_ms"],
                "properties": {
                  "path": {
                    "type": "string",
                    "pattern": "^/v\\d+/[a-z/]+$"
                  },
                  "transforms": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                      "type": "string",
                      "pattern": "^[a-z]+\\.[a-z]+$"
                    }
                  },
                  "latency_budget_ms": {
                    "type": "integer",
                    "minimum": 1,
                    "maximum": 5000
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
