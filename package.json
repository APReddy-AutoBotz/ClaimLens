{
  "name": "claimlens",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:extension": "cd app/web && vite build",
    "test": "vitest run",
    "test:node": "vitest run --project node",
    "test:browser": "vitest run --project browser",
    "test:e2e": "playwright test",
    "pretest:e2e": "pnpm playwright:install",
    "playwright:install": "npx playwright install --with-deps",
    "test:fixtures": "node scripts/run-fixtures.mjs",
    "test:perf": "node scripts/run-perf.mjs",
    "check:budgets": "node scripts/check-budgets.mjs",
    "check:coverage": "node scripts/check-coverage.mjs",
    "check:docs-for-new-transforms": "node scripts/check-docs.mjs",
    "validate:schemas": "node scripts/validate-schemas.mjs",
    "verify:signatures": "node scripts/verify-signatures.mjs",
    "verify:signatures:generate": "node scripts/verify-signatures.mjs --generate",
    "ci": "pnpm test:node && pnpm test:browser && pnpm test:fixtures && pnpm test:perf && pnpm check:budgets && pnpm test:e2e",
    "ci:gates": "node scripts/ci-gates.mjs",
    "hooks:precommit": "node scripts/hooks-precommit.mjs",
    "hooks:prverify": "node scripts/hooks-prverify.mjs",
    "hooks:release": "node scripts/hooks-releasegate.mjs",
    "mcp:dev": "node servers/dev-all.mjs",
    "audit:generate": "node scripts/generate-audit-pack.mjs",
    "demo:audit": "node scripts/generate-audit-pack.mjs fixtures/menu/edge-cases.json"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/chrome": "^0.0.268",
    "@types/express": "^5.0.5",
    "@types/node": "^24.9.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^2.0.5",
    "express": "^5.1.0",
    "fastify": "^4.28.0",
    "happy-dom": "^20.0.10",
    "ioredis": "^5.8.2",
    "jsdom": "^24.0.0",
    "supertest": "^7.1.4",
    "typescript": "^5.6.3",
    "vite": "^5.0.0",
    "vitest": "^2.0.5",
    "yaml": "^2.5.0"
  }
}
